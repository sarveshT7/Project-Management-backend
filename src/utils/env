; JWT_REFRESH_EXPIRE=7d

; # Email Configuration (NodeMailer)
; SMTP_HOST=smtp.gmail.com
; SMTP_PORT=587
; SMTP_USER=your-email@gmail.com
; SMTP_PASS=your-app-password
